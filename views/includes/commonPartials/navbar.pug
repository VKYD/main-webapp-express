			};

		};
		var sidenav = document.getElementById('sidenav');
		//- var cart = document.getElementById('cart');

		function openSlider(object) {
			if (screen.width < 600) {
				object.style.width = screen.width;
			}
			else {
				object.style.width = 400;
			};
		}

		function closeSlider(object) {
			object.style.width = 0;
		}
