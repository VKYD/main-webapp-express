.productPageCol-2
	width 50%
	display inline-block
	vertical-align top
	clear left

.productDescription .gallery
	display none
	margin-top 30px

@media screen and (max-width 650px)
	.productPageCol-2
		width 100%
	.productPageCol-2 .widthRestriction
		width 100%
	.gallery
		display none
	.productDescription .gallery
		display block

.productPageVRSliderSection video 
	width 100%

.VRSlider
	width 100%
	-webkit-appearance none
	height 15px
	background lightGrey
	outline none
	opacity 0.6
	-webkit-transition 0.2s
	transition opacity 0.2s
	display block
	margin 0 auto
	margin-top 20px
	max-width 500px
	position relative
	z-index 0

.VRSlider:hover
	opacity 1

.VRSlider::-webkit-slider-thumb 
	-webkit-appearance none
	appearance none
	width 20px
	height 15px
	background black
	cursor pointer
	z-index 2
    
.VRSlider::-moz-range-thumb
	width 20px
	height 15px
	background black
	cursor pointer

.productDescription h5
	color darkGrey
	font-weight 400

.productDescription button
	padding-top 10px
	padding-right 15px
	padding-bottom 10px
	padding-left 15px
	background-color white
	border 2px solid black
	font-family Poppins
	font-weight 600
	rfs(0.8rem)
	margin-right 15px
	margin-top 10px
	margin-bottom 10px
	transition 0.2s

.productDescription button:hover
	background-color black
	color white

.productDescription i
	rfs(0.9rem)
	color black

.productDescription button:hover i
	color white

.productDescription a
	transition 0.2s

.productDescription a:hover
	color darkGrey
	
.shareIconsContainer i
	rfs(2rem)
	margin-right 15px
	margin-left 15px
	transition 0.2s

.shareIconsContainer i:hover
	color darkGrey
	
.productDescription hr
	margin-bottom 30px
	margin-top 30px

@media screen and (max-width 560px)
	.shareIconsContainer i
		font-size 35px
	