// Navigation styling
nav 
	width 100%
	
// Topnav bar
.topnavBar
	width 100%
	position fixed
	top 0
	background-color white
	padding-top 10px
	padding-bottom 10px
	text-align center
	z-index 1

.menuIcon
	width 35px
	float left

.menuIconBar
	width 30px
	height 4px
	background-color black
	border-radius 5px
	transition 0.2s
	
#menuIconBar-1, #menuIconBar-2
	margin-bottom 5px

.menuIcon:hover #menuIconBar-1
	width 35px

.menuIcon:hover #menuIconBar-2
	width 20px

.menuIcon:hover #menuIconBar-3
	width 25px

.topnavBar a
	rfs(3rem)
	position relative
	bottom 5px

.cartIcon
	float right

.cartIcon i
	font-size 35px

// Sidenav and cart
.sidenav, .cart
	height 100%
	width 0
	position fixed
	z-index 5
	top 0
	overflow-x hidden
	transition 0.2s
	background-color black

.sidenav
	left 0

.cart
	right 0

.closeIcon
	width 35px

.closeIconBar
	width 30px
	height 4px
	background-color white
	border-radius 5px
	transition 0.2s
	position absolute

#closeIconBar-1
	transform rotate(-45deg)

#closeIconBar-2
	transform rotate(45deg)

#closeIcon-2
	float right

.sidenav
	// width 400px

.sidenav a
	color white
	transition 0.2s

.sidenav a:hover
	color lightGrey

#sidenavContent a
	line-height 45px

.sidenav a button
	padding-top 10px
	padding-right 20px
	padding-bottom 10px
	padding-left 20px
	color white
	background-color black
	border 2px solid white
	font-family Poppins
	font-weight 600
	rfs(0.8rem)
	margin-right 15px
	margin-top 10px
	margin-bottom 10px
	transition 0.2s

.sidenav a button:hover
	color black
	background-color white

.sidenav .socialIcons i
	color white
	margin-right 10px
	margin-bottom 10px
	rfs(1.4rem)
	padding-left 10px
	padding-top 10px
	padding-right 10px
	padding-bottom 10px
	background-color lightGrey
	transition 0.2s

.sidenav .socialIcons i:hover
	background-color darkGrey

@media screen and (max-width 600px)
	.sidenav .socialIcons i
		margin-right 5px
		margin-left 5px

// cart styling
.cart .checkoutSection
	position sticky
	bottom 20px

.cart button 
	width 100%
	padding-top 10px
	padding-right 20px
	padding-bottom 10px
	padding-left 20px
	color white
	background-color black
	border 2px solid white
	font-family Poppins
	font-weight 600
	rfs(0.8rem)
	margin-right 15px
	margin-top 10px
	margin-bottom 10px
	transition 0.2s

.cart button:hover
	color black
	background-color white
	
