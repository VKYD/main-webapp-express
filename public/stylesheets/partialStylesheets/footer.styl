// Footer styling
footer 
	width 100%
	display block
	padding-top 60px
	padding-bottom 50px
	background-color black
	color white
	bottom 0

footer h1
	rfs(3rem)
	padding-bottom 50px

.footer-col-3
	width 30%
	display inline-block
	vertical-align top
	margin-bottom 30px

#footer-col-3-1
	width 40%
	
.footer-col-3 a
	color white
	line-height 35px
	transition 0.2s

.footer-col-3 a:hover
	color white

@media screen and (max-width 780px)
	footer 
		text-align center
	#footer-col-3-1, #footer-col-3-2
		width 50%
	#footer-col-3-3
		width 100%

@media screen and (max-width 600px)
	#footer-col-3-1, #footer-col-3-2, #footer-col-3-3
		width 100%

footer .socialIcons i
	margin-right 5px
	margin-left 5px
	margin-bottom 10px
	rfs(1.7rem)
	padding-left 10px
	padding-top 10px
	padding-right 10px
	padding-bottom 10px
	background-color lightGrey
	transition 0.2s

footer .socialIcons i:hover
	background-color darkGrey

footer input
	height 27px
	width 90%
	max-width 220px
	margin-top 10px
	margin-left 5px
	margin-right 5px
	background-color lightGrey
	font-family Poppins
	color white