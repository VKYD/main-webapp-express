.banner
	width 100%
	height 100%
	position relative
	text-align center

#banner
	background-position center
	background-repeat no-repeat
	background-size cover

.bannerContent
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%)
	color #ffffff

.bannerContent button
	padding 10px 20px
	color white
	background-color rgba(0,0,0,0.6)
	border 2px solid white
	font-family Poppins
	font-weight 600
	rfs(1.3rem)
	margin-right 15px
	margin-top 10px
	margin-bottom 10px
	transition 0.2s

.bannerContent button:hover
	background-color white
	color black

.newArrivals .row
	width 100%
	display inline-block
	white-space nowrap
	overflow-x scroll

.newArrivals .row::-webkit-scrollbar
	background-color lightGrey
	transition 0.2s

.newArrivals .row::-webkit-scrollbar-thumb
	background-color darkGrey
	cursor pointer

.newArrivals .row .card
	display inline-block
	width 300px
	text-align center
	padding 15px 15px
	transition 0.2s
	border 3px solid rgba(0,0,0,0)
	margin-bottom 30px

.newArrivals .row .card:hover
	border 3px solid black

.newArrivals .row .card h3
	margin-top 10px
	margin-bottom 10px

.newArrivals .row .card button
	padding 10px 10px
	background-color white
	border 2px solid black
	font-family Poppins
	font-weight 600
	rfs(0.8rem)
	margin-right 15px
	transition 0.2s

.newArrivals .row .card button:hover
	background-color black
	color white

.index .col-2
	width 50%
	display inline-block

@media screen and (max-width 800px)
	.index .col-2
		width 100%

.featuredSections .container
	position relative
	text-align center

.featuredSections img
	filter none
	transition 0.2s

.featuredSections img:hover
	filter brightness(50%)

.featuredSections .container h2
	color white
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%)

.statement
	background-color offwhite

.statement button
	padding 5px 10px
	color black
	background-color rgba(0,0,0,0)
	border 2px solid black
	font-family Poppins
	font-weight 600
	rfs(1rem)
	margin-right 10px
	margin-top 5px
	margin-bottom 5px
	transition 0.2s

.statement button:hover
	background-color black
	color white

